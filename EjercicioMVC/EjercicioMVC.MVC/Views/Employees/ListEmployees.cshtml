@model List<EjercicioMVC.MVC.Models.EmployeesView>
@{ 
    ViewBag.Title = "List Employees";
}
<h1>Lista de Empleados</h1>

<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Nombre</th>
            <th scope="col">Apellido</th>
            <th scope="col">Direccion</th>
            <th scope="col">Ciudad</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
        <tr>
            <td scope="row">@employee.ID</td>
            <td scope="row">@employee.FirstName</td>
            <td scope="row">@employee.LastName</td>
            <td scope="row">@employee.Address</td>
            <td scope="row">@employee.City</td>
            <td scope="row">@Html.ActionLink("Borrar","DeleteEmployee", new { id = employee.ID})</td>
        </tr>
        }

    </tbody>
</table>    